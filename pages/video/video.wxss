/* pages/video/video.wxss */
.videoContainer .header{
    display: flex;
    padding: 10rpx;
}
.videoContainer .header image{
    height: 60rpx;
    width: 60rpx;
}

.videoContainer .header .search{
    border: 1px solid #eee;
    flex: 1;
    margin:0 20rpx;
    border-radius: 30rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
}
.videoContainer .navScroll{
    display: flex;
    white-space: nowrap;
    height: 60rpx;
}
.navScroll .navContent{
    height: 60rpx;
    box-sizing: border-box;
}
.videoContainer .navScroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.action{
    border-bottom: 1px solid #d43c33;
}
.videoItem{
    padding: 0 3%;
}
/* .videoItem video{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
} */
.videoItem .common{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}

.content{
    font-size: 24rpx;
    padding: 6rpx;
}
/* footer */
.footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
}
.footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}

.footer .comments_praised {
    float: right;
}

.comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
}

.comments_praised .btn:after {
    border: none;
}

.comments_praised .item {
    margin-left: 50rpx;
    position: relative;
}

.comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
}
.videoScroll{
    margin-top: 10rpx;
    height:calc(100vh - 152rpx) 
}